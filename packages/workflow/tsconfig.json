{
	"extends": "@n8n/typescript-config/tsconfig.common.json",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		},
		"tsBuildInfoFile": "dist/typecheck.tsbuildinfo",
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"isolatedDeclarations": true
	},
	"include": ["src/**/*.ts", "test/**/*.ts"]
}
